{
  "manifest_version": 2,
  "name": "Hide dtf comments",
  "description": "Hiding comments on dtf",
  "version": "0.0.1",
  "author": "Nikita Ostapenko",
  "browser_action": {
    "default_title": "Hiding comments on dtf",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://dtf.ru/*"],
      "js": ["content.js", "popup.js"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
